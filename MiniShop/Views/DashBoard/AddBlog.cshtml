@model BlogViewModel

@{
    Layout = "_DashBoard";
}


<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Blog</span>
        </div>

        <div>
            <form method="post" asp-action="AddBlog" class="row">
                <div class="mb-3">
                    <label asp-for="blog.Name" for="" class="form-label">Blog Title</label>
                    <input type="text"
                           asp-for="blog.Name"
                           class="form-control"
                           placeholder="" /><span asp-validation-for="blog.Name" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="blog.Description" for="" class="form-label">Blog Description</label>
                    <textarea type="text"
                              asp-for="blog.Description"
                              class="form-control"
                              placeholder=""></textarea><span asp-validation-for="blog.Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="blog.AuthorName" for="" class="form-label">AuthorName</label>
                    <textarea type="text"
                              asp-for="blog.AuthorName"
                              class="form-control"
                              placeholder=""></textarea><span asp-validation-for="blog.AuthorName" class="text-danger"></span>
                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="blog.BlogTypeId" for="" class="form-label">BlogType</label>
                    <select class="form-select "
                            asp-for="blog.BlogTypeId">
                        <option selected>Select one</option>

                        @{
                            foreach (var type in Model.types)
                            {
                                <option value=@type.Id>@type.Name</option>
                            }
                        }
                      
                    </select>
                </div>



                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>