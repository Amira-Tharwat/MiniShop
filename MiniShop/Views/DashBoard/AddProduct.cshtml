@model ProductViewModel

@{
    Layout = "_DashBoard";
}


<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Product</span>
        </div>

        <div>
            <form method="post" asp-action="AddProduct" class="row">
                <div class="mb-3">
                    <label asp-for="Product.Name" for="" class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="Product.Name"
                           class="form-control"
                           placeholder="" /><span asp-validation-for="Product.Name" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="Product.Description" for="" class="form-label">Product Description</label>
                    <textarea type="text"
                              asp-for="Product.Description"
                              class="form-control"
                              placeholder=""></textarea><span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Product.Quantity" for="" class="form-label">Product Quantity</label>
                    <input type="number"
                           asp-for="Product.Quantity"
                           class="form-control"
                           placeholder=""></input><span asp-validation-for="Product.Quantity" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Product.Price" for="" class="form-label">Product Price</label>
                    <input type="number"
                           asp-for="Product.Price"
                           class="form-control"
                           placeholder=""></input><span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">

                        <input class="form-check-input" type="checkbox" asp-for="Product.EnableSize" />
                        <label class="form-check-label" asp-for="Product.EnableSize" for=""> Enable Product Size </label>
                    </div>


                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="Product.CompanyId" for="" class="form-label">company</label>
                    <select class="form-select "
                            asp-for="Product.CompanyId">
                        <option selected>Select one</option>
                        @{
                            foreach(var com in Model.Company)
                            {
                                <option value=@com.Id>@com.Name</option>
                            }
                        }
                       
                    </select>
                </div>



                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>