@model ProductViewModel

@{
    Layout = "_DashBoard";
}


<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Editing Product</span>
        </div>

        <div>
            <form method="post" asp-action="EditProduct" class="row">
                <div class="mb-3">
                    <label asp-for="Product.Name" for="" class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="Product.Name"
                           value="@Model.Product.Name"
                           class="form-control"
                           placeholder="" />

                </div>
                <input type="number" asp-for="Product.Id" hidden />
                <div class="mb-3">
                    <label asp-for="Product.Description" for="" class="form-label">Product Description</label>
                    <textarea type="text"
                              asp-for="Product.Description"
                              class="form-control"
                              placeholder=""> @Model.Product.Description</textarea>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Product.Quantity" for="" class="form-label">Product Quantity</label>
                    <input type="number"
                           asp-for="Product.Quantity"
                           value="@Model.Product.Quantity"
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="Product.Price" for="" class="form-label">Product Price</label>
                    <input type="number"
                           asp-for="Product.Price"
                           value="@Model.Product.Price"
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">
                        @{
                            if (Model.Product.EnableSize == true)
                            {
                                <input class="form-check-input" type="checkbox" asp-for="Product.EnableSize" checked />
                            }
                            else
                            {
                                <input class="form-check-input" type="checkbox" asp-for="Product.EnableSize" unchecked />

                            }
                        }
                       
                        <label class="form-check-label" asp-for="Product.EnableSize" for=""> Enable Product Size </label>
                    </div>


                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="Product.CompanyId" for="" class="form-label">company</label>
                    <select class="form-select "
                            asp-for="Product.CompanyId">
                        @{

                            foreach(var com in Model.Company)
                            {
                                int comId = Model.Product.CompanyId;
                                if (comId == com.Id)
                                {
                                    <option value=@com.Id selected>@com.Name</option>
                                }
                                else
                                {
                                    <option value=@com.Id>@com.Name</option>
                                }
                             
                            }
                        
                        }
                        
                        
                    </select>
                </div>



                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>